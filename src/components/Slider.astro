<script>
    import EmblaCarousel from 'embla-carousel'
    import Autoscroll from 'embla-carousel-auto-scroll'

    const emblaList = document.querySelectorAll('.embla')

    emblaList.forEach(embladN => {
        const options = {
            loop: true,
            speed: 10,
            slidesToScroll: 1,
            draggable: true,
            dragFree: true,
            skipSnaps: false,   
        }
        const plugins = [Autoscroll({
            speed: 1,
            startDelay: 3000,
            stopOnInteraction: false,
        })]
        const emblaNode = embladN as HTMLElement;
        EmblaCarousel(emblaNode, options, plugins)
    });
</script>

